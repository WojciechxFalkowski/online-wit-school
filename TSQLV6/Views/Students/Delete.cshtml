@model TSQLV6.Models.StudentDeleteViewModel

@{
    ViewData["Title"] = "Delete Student";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto mt-6 px-6">
    <h1 class="text-3xl font-bold mb-4">Delete Student</h1>

    <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        <dl class="divide-y divide-gray-200">
            <div class="py-4 flex">
                <dt class="font-medium text-gray-700 w-1/4">Student Name</dt>
                <dd class="text-gray-900 w-3/4">@Html.DisplayFor(model => model.StudentName)</dd>
            </div>
            <div class="py-4 flex">
                <dt class="font-medium text-gray-700 w-1/4">Study Mode</dt>
                <dd class="text-gray-900 w-3/4">@Html.DisplayFor(model => model.StudyMode)</dd>
            </div>
            <div class="py-4 flex">
                <dt class="font-medium text-gray-700 w-1/4">Specialization</dt>
                <dd class="text-gray-900 w-3/4">@Html.DisplayFor(model => model.SpecializationName)</dd>
            </div>
            <div class="py-4 flex">
                <dt class="font-medium text-gray-700 w-1/4">Department</dt>
                <dd class="text-gray-900 w-3/4">@Html.DisplayFor(model => model.DepartmentName)</dd>
            </div>
        </dl>
    </div>

    <form asp-action="Delete" method="post" class="mt-4">
        <input type="hidden" asp-for="StudentId" />
        <button type="submit" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Delete</button>
        <a asp-action="Index" class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800">Back to List</a>
    </form>
</div>