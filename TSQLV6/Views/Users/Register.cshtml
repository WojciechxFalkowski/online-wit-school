@model TSQLV6.Models.User

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="flex items-center justify-center pt-32 py-64 bg-gray-100 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div>
            <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                Zarejestruj się
            </h2>
        </div>
        <form asp-action="Register" method="post" class="mt-8 space-y-6 bg-white shadow-md rounded px-10 pt-6 pb-8 mb-4">
            <div asp-validation-summary="ModelOnly" class="text-red-600"></div>
            <div class="rounded-md shadow-sm -space-y-px">
                <!-- Email -->
                <div>
                    <label for="Email" class="sr-only">Email</label>
                    <input asp-for="Email" type="email" required class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Email">
                    <span asp-validation-for="Email" class="text-red-600"></span>
                </div>
                <!-- Password -->
                <div>
                    <label for="Password" class="sr-only">Hasło</label>
                    <input asp-for="Password" type="password" required class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Hasło">
                    <span asp-validation-for="Password" class="text-red-600"></span>
                </div>
                <!-- FirstName -->
                <div>
                    <label for="FirstName" class="sr-only">Imię</label>
                    <input asp-for="FirstName" type="text" required class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Imię">
                    <span asp-validation-for="FirstName" class="text-red-600"></span>
                </div>
                <!-- LastName -->
                <div>
                    <label for="LastName" class="sr-only">Nazwisko</label>
                    <input asp-for="LastName" type="text" required class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Nazwisko">
                    <span asp-validation-for="LastName" class="text-red-600"></span>
                </div>
            </div>
            <!-- Submit -->
            <div>
                <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Zarejestruj się
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
