@model TSQLV6.Models.CreateEnrollmentViewModel

@{
    ViewData["Title"] = "Create Enrollment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl font-bold mb-4">Create New Enrollment</h1>

    <form asp-action="Create" method="post" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        <div class="mb-4">
            <label asp-for="StudentId" class="block text-gray-700 text-sm font-bold mb-2">Student</label>
            <select asp-for="StudentId" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" asp-items="@(ViewData["Students"] as SelectList)"></select>
            <span asp-validation-for="StudentId" class="text-red-600 text-sm"></span>
        </div>
        <div class="mb-4">
            <label asp-for="CourseId" class="block text-gray-700 text-sm font-bold mb-2">Course</label>
            <select asp-for="CourseId" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" asp-items="@(ViewData["Courses"] as SelectList)"></select>
            <span asp-validation-for="CourseId" class="text-red-600 text-sm"></span>
        </div>
        <div class="mb-4">
            <label asp-for="Grade" class="block text-gray-700 text-sm font-bold mb-2">Grade</label>
            <input asp-for="Grade" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
            <span asp-validation-for="Grade" class="text-red-600 text-sm"></span>
        </div>
        <div class="mb-4">
            <label asp-for="CompletionDate" class="block text-gray-700 text-sm font-bold mb-2">Completion Date</label>
            <input asp-for="CompletionDate" type="date" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
            <span asp-validation-for="CompletionDate" class="text-red-600 text-sm"></span>
        </div>
        <div class="mb-4">
            <label asp-for="Points" class="block text-gray-700 text-sm font-bold mb-2">Points</label>
            <input asp-for="Points" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
            <span asp-validation-for="Points" class="text-red-600 text-sm"></span>
        </div>
        <div class="text-red-600 mb-4">
            @Html.ValidationSummary()
        </div>
        <div class="flex items-center justify-between">
            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Save</button>
            <a asp-action="Index" class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800">Back to List</a>
        </div>
    </form>
</div>
