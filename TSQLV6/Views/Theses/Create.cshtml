@model TSQLV6.Models.ThesisCreateViewModel

@{
    ViewData["Title"] = "Create New Thesis";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-3xl font-bold mb-4">Create New Thesis</h1>

<form asp-action="Create" method="post" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <div class="mb-4">
        <label asp-for="Title" class="block text-gray-700 text-sm font-bold mb-2"></label>
        <input asp-for="Title" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
        <span asp-validation-for="Title" class="text-red-600 text-sm"></span>
    </div>
    <div class="mb-4">
        <label asp-for="ThesisType" class="block text-gray-700 text-sm font-bold mb-2"></label>
        <input asp-for="ThesisType" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
        <span asp-validation-for="ThesisType" class="text-red-600 text-sm"></span>
    </div>
    <div class="mb-4">
        <label asp-for="DocumentPath" class="block text-gray-700 text-sm font-bold mb-2"></label>
        <input asp-for="DocumentPath" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
        <span asp-validation-for="DocumentPath" class="text-red-600 text-sm"></span>
    </div>
    <div class="flex items-center justify-between">
        <div class="text-red-500 text-sm">
            @if (ViewData.ModelState.ContainsKey(""))
            {
                <p>@ViewData.ModelState[""].Errors.FirstOrDefault()?.ErrorMessage</p>
            }
        </div>
        <a asp-action="Index" class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800">Back to List</a>
    </div>

    <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 mt-4 rounded focus:outline-none focus:shadow-outline">Create</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
