@model TSQLV6.Models.Thesis

@{
    ViewData["Title"] = "Thesis Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool isAdmin = User.HasClaim(c => c.Type == ClaimTypes.Role && c.Value == "administrator");
}

<h1 class="text-3xl font-bold mb-4">Thesis Details</h1>

<div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <dl class="divide-y divide-gray-200">
        @if (isAdmin)
        {
            <div class="py-4 flex">
                <dt class="font-medium text-gray-700 w-1/4">Thesis ID</dt>
                <dd class="text-gray-900 w-3/4">@Html.DisplayFor(model => model.ThesisId)</dd>
            </div>
        }
        <div class="py-4 flex">
            <dt class="font-medium text-gray-700 w-1/4">Title</dt>
            <dd class="text-gray-900 w-3/4">@Html.DisplayFor(model => model.Title)</dd>
        </div>
        <div class="py-4 flex">
            <dt class="font-medium text-gray-700 w-1/4">Thesis Type</dt>
            <dd class="text-gray-900 w-3/4">@Html.DisplayFor(model => model.ThesisType)</dd>
        </div>
        <div class="py-4 flex">
            <dt class="font-medium text-gray-700 w-1/4">Upload Date</dt>
            <dd class="text-gray-900 w-3/4">@Html.DisplayFor(model => model.UploadDate)</dd>
        </div>
        <div class="py-4 flex">
            <dt class="font-medium text-gray-700 w-1/4">Document Path</dt>
            <dd class="text-gray-900 w-3/4">@Html.DisplayFor(model => model.DocumentPath)</dd>
        </div>
        <div class="py-4 flex">
            <dt class="font-medium text-gray-700 w-1/4">Student</dt>
            <dd class="text-gray-900 w-3/4">@Html.DisplayFor(model => model.Student.Email)</dd>
        </div>
    </dl>
</div>

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model.ThesisId" class="text-indigo-600 hover:text-indigo-900">Edit</a> |
    <a asp-action="Index" class="text-indigo-600 hover:text-indigo-900">Back to List</a>
</div>
