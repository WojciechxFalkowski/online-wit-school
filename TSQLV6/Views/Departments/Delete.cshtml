@model TSQLV6.Models.Department

@{
    ViewData["Title"] = "Delete Department";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-3xl font-bold mb-4">Delete Department</h1>

<div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <dl class="divide-y divide-gray-200">
        <div class="py-4 flex">
            <dt class="font-medium text-gray-700 w-1/4">Department ID</dt>
            <dd class="text-gray-900 w-3/4">@Html.DisplayFor(model => model.DepartmentId)</dd>
        </div>
        <div class="py-4 flex">
            <dt class="font-medium text-gray-700 w-1/4">Department Name</dt>
            <dd class="text-gray-900 w-3/4">@Html.DisplayFor(model => model.DepartmentName)</dd>
        </div>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post" class="mt-4">
    <input type="hidden" asp-for="DepartmentId" />
    <button type="submit" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Delete</button>
    <a asp-action="Index" class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800">Back to List</a>
</form>
